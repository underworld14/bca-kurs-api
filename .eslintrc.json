{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "plugins": ["mocha"],
  "extends": [
    "eslint:recommended",
    "plugin:json/recommended",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:import/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      2,
      {
        "argsIgnorePattern": "next"
      }
    ],
    "import/no-unresolved": 2,
    "import/no-commonjs": 2
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
